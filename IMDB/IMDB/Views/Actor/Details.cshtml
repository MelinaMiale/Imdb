@model IMDB.Web.Models.ActorDetailModelView

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ActorDetailModelView</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ProfileFoto)</dt>
        <dd class="col-sm-10"><img src= "@Html.DisplayFor(model => model.ProfileFoto)" width="250" height="250" /></dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ID_Actor)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ID_Actor)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.LastName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.LastName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nationality)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nationality)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Age)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Age)</dd>

        <dt><label asp-for="RolsPlayed"></label></dt>
        <dd>
            <ul>
                @foreach (var rol in Model.RolsPlayed)
                {
                    <li>@rol.CharacterName</li>
                }
            </ul>
        </dd>

    </dl>
</div>
