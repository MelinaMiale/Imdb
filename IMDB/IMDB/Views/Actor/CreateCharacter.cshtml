@model IMDB.Web.ViewModels.CharacterPlayedByActorViewModel

@{
    ViewData["Title"] = "CreateCharacter";
}

<h1>CreateCharacter</h1>

<h4>CharacterPlayedByActorViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCharacter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="IdActor" class="control-label"></label>
                <input asp-for="IdActor" class="form-control" />
                <span asp-validation-for="IdActor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <select class="form-control" asp-for="MovieId" asp-items="@Model.AvailableMovies.Select(m => new SelectListItem {Value = m.Id.ToString(), Text = m.Name})">
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
